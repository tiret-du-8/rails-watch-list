

<div class="container mt-5">

  <div class="row d-flex justify-content-start align-content-between">
    <div class="col-8 d-flex justify-content-start align-content-between flex-wrap">
      <% @lists.each do |list| %>
        <div class="card list-card mb-3 m-2" style="width: 47%;">
          <% if list.photo.attached? %>
            <div class="card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key %>')">
              <h5 class="card-title text-white"><%= list.name %></h5>
              <div class="card-body d-flex flex-column justify-content-between">
                <%# <div>
                    <ul>
                    <% list.movies.each do |movie| %>
                      <%# <li><%= movie.title</li> %>
                    <%# <% end %>
                    <%# </ul> %>
                <%# </div> %>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="my-1"><a href="<%= list_path(list) %>" class="btn btn-purple">Show movies</a></div>
                    <%# <div class="my-1"><a href="new_list_bookmark_path(list)" class="btn btn-link p-1">Add a movie</a> %>
                    <%= link_to "Delete list", list_path(list), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete #{list.name} list ?"}, class: 'text-white' %>
                  </div>
                </div>
            </div>
          <% else %>
            <div class="card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_path('default.png') %>)">
              <h5 class="card-title text-white"><%= list.name %></h5>
              <div class="card-body d-flex flex-column justify-content-between">
                <%# <div>
                  <ul>
                    <% list.movies.each do |movie| %>
                      <%# <li><%= movie.title</li> %>
                    <%# <% end %>
                  <%# </ul> %>
                <%# </div> %>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="my-1"><a href="<%= list_path(list) %>" class="btn btn-purple">Show movies</a></div>
                    <%# <div class="my-1"><a href="new_list_bookmark_path(list)" class="btn btn-link p-1">Add a movie</a> %>
                    <%= link_to "Delete list", list_path(list), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete #{list.name} list ?"}, class: 'text-white' %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <%# link_to "Add a list", new_list_path %>
    <div class="col-4">
      <div class="list-form-card m-2 p-5 sticky-top sticky-offset-form-list">
        <%= render 'form', list: @list %>
      </div>
    </div>
  </div>
</div>
